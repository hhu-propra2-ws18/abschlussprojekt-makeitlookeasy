# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off
indent_style = tab


[*.yml]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.adoc]
trim_trailing_whitespace = false

[gradlew]
indent_size = 2
indent_style = space

[*.gradle]
indent_size = 2
indent_style = space

